@model Producto

@{
    var existeUsuarioError = ViewData.ModelState["Correo"]?.Errors.FirstOrDefault()?.ErrorMessage;
}

@if (!string.IsNullOrEmpty(existeUsuarioError))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @existeUsuarioError
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="head">
    <h4><p style="margin-right: 10px;">Productos </p>
        <p> | </p>
        <a href="/categorias" style="margin-left: 10px;">Categorias</a>
    </h4>
</div>

<div class="center-content">
    <h2 style="margin-top: 20px;">Tarea Mucho-a-Muchos</h2>
    <div class='content'>
        <div class='CrearProducto'>
            <form asp-controller="Home" asp-action="CrearProducto" method="post">
                <h3>Nuevo Producto ⏬</h3><br />
                <div class="form-group">
                    <label asp-for="Nombre">Nombre: </label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span></br>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion">Descripcion: </label>
                    <input asp-for="Descripcion" class="form-control" required />
                    <span asp-validation-for="Descripcion" class="text-danger"></span></br>
                </div>

                <div class="form-group">
                    <label asp-for="Precio">Precio: </label>
                    <input asp-for="Precio" type="number" class="form-control" required />
                    <span asp-validation-for="Precio" class="text-danger"></span></br>
                </div>

                <button type="submit" class="btn2 btn btn-primary">Crear Producto</button>
            </form>
        </div>
        <div class='linea'>

        </div>
        <div class='listaproductos'>
            <h4>Todos los Productos</h4><br />
            <ul>
                @if (ViewBag.AllProductos != null)
                {
                    @foreach (var p in ViewBag.AllProductos)
                    {
                        <li><a href="/producto/@p.ProductoId">@p.Nombre</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>